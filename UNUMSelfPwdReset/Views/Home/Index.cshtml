    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#global-loader").hide();
        });
        $("#global-loader").hide();
        // $(document).on('click', '.Generate', function () {
        $('#Generate').click(function () {
            debugger
