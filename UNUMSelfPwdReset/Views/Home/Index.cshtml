            $.get('GeneratePassword', { Id }).done(function (data) {
                debugger
                if (data != null && data != undefined) {
                    $("#temp").text(data);
                    $(".copyTemp").val(data);
                    $('#GenerateModel').modal('show');
                }
                $("#global-loader").hide();
            }).always(function () {

            });
            $("#global-loader").hide();
        });

        $(document).on('click', '.copyval', function () {

            // Get the text field
            var copyText = $(".copyTemp").val();
            // Select the text field
            var $temp = $("<input>");
            $("body").append($temp);
